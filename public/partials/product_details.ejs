<div id="product_details" hx-vals='{"id": "<%= p.id%>"}'>
    <h2><%= p.title%></h2>
    <p><%= p.description%></p>
    <h2>PRICE: <span><%= p.price%></span></h2>
    <h2>RATING: <span><%= p.rating%>/ 10</span></h2>
    <p>STOCK: <span><%= p.stock%></span></p>

    <div id="product_details__images">
        <% p.images.forEach(function(image, index) { %>
            <img src="<%= image%>" alt="product_image__<%= index%>">
        <% })%>
    </div>

    <img src="../img/spinner.svg" alt="loading..." id="spinner" class="htmx-indicator"/>
</div>


<button id="get_product" hx-swap-oob="true" hx-get="/examples/product_details/"  hx-swap="outerHTML" hx-target="#product_details" hx-indicator="#spinner">Get NEXT PRODUCT</button>

